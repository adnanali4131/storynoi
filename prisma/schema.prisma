generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @unique @default(uuid())
  firstName String
  lastName  String
  email     String  @unique
  password  String?
  Story     Story[]
}

model Story {
  id         String @id @unique @default(uuid())
  title      String
  userPrompt String
  imageUrl   Json?
  userId     String
  user       User   @relation(fields: [userId], references: [id])
}
